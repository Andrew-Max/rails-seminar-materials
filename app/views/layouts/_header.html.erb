<!-- The header markup. Uses twitter bootstrap -->
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-left">
        <%= link_to (image_tag "logo.jpg"), root_url %>
        <%= link_to "Fedora Space", root_url, class: 'brand-name' %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if @current_user %>
          <div class="current-user">
            <div class="avatar">
                <%#= <<< make a gravatar_link for @user >>> %>
                <!-- look at application_helper.rb to see how it works and search in the app to find examples -->
            </div>
          </div>
          <%#= <<< link_to the word "logout", and the logout_url>>> %>
        <% else %>
          <div class="no-user">
            <p>Click "Be Me" to sign in as a user</p>
          </div>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
