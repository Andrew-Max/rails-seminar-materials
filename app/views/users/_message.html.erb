<div class="message">
  <div class="meta-data">
    <div class="gravatar">
      <%= link_to gravatar_for(message.author), user_path(message.author) %>
    </div>
    <div class="info">
      <p><%= link_to message.author.name, user_path(message.author) %></p>
      <p><%= message.created_at.to_datetime.to_s(:easy) %></p>
    </div>
  </div>
  <div class="message-body">
    <%= message.body %>
  </div>
</div>